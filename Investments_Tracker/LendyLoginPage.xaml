<Window x:Class="Investments_Tracker.LendyLoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Investments_Tracker"
        mc:Ignorable="d"
        Title="LendyLoginPage" Height="228.741" Width="384.204">
    <Grid>
        <Label Content="Enter your credentials for Lendy below" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top"/>
        <Label Content="E-mail Address:" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="40,85,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_EmailAddress" HorizontalAlignment="Left" Height="23" Margin="107,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>
        <PasswordBox x:Name="txt_Password" HorizontalAlignment="Left" Margin="107,88,0,0" VerticalAlignment="Top" Width="239" Height="23"/>
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="76,144,0,0" VerticalAlignment="Top" Width="75" Click="Confirm_Click"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="214,144,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click" />

    </Grid>
</Window>
